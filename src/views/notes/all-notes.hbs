
<div class="row">  <!-- Creamos una fila, dentro de esta fila vamos a crear mÃºltiples tarjetas que van a estar dentro de columnas para poder ir poniendo multiples notas.-->
    {{#each notes}}  <!-- Esto para ir recorriendo el array de notas--> 
        <div class="col-md-3 p-2">              <!--Creamos multiples columnas de tres porque cada fila va a ocupar 3 columnas--> 
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title d-flex justify-content-between align-items-center">
                        {{title}}
                        <a href="/notes/edit/{{_id}}">
                            <i class="fas fa-edit"></i>
                        </a>
                    </h4>
                    <p>{{description}}</p>
                    <form action="/notes/delete/{{id}}?_method=DELETE" method="POST">
                        <input type="hidden" name="_method" value="DELETE">
                         <button class= "btn btn-danger btn-block btn-small" type="submit">
                        Delete
                        </button>
                    </form>
                </div>
            </div>
        </div>
        {{else}}
        <div class="card mx-auto">
            <div class="card-body">
                <h1>Hello {{user.name}}</h1>
                <p class="lead">There are not notes yet.</p>
                <a href="/notes/add" class="btn btn-success btn-block">Create One!</a>
            </div>
        </div>
    {{/each}}
</div>